# Core versions
PHP_VERSION=8.3
MYSQL_IMAGE=mariadb:10.11
WEB_SERVER=apache
TLD=loc

# Project naming
COMPOSE_PROJECT_NAME=wpdevbox

# Ports (chosen to avoid common Local WP ranges)
HTTP_PORT=18080
HTTPS_PORT=18443
MYSQL_PORT=13307
MAILPIT_UI_PORT=18025
MAILPIT_SMTP_PORT=11025
ADMINER_PORT=18081
DASHBOARD_PORT=19000

# DB defaults
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=wp
MYSQL_PASSWORD=wp

# UID/GID mapping for file permissions
PUID=1000
PGID=1000
